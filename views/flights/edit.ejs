<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="American">American</option>
      <option value="Delta">Delta</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="'airport-select">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-number">Flight Number:</label>
    <input 
      type="text" 
      name="flightNo" 
      value="<%= flight.flightNo %>" id="flight-number-input">
    <label for="departs-input">Departs:</label>
    <input 
      type="datetime-local" name="departs" 
      value="<%= flight.departs %>">
    <button type="submit">Save Flight
    </button>
  </form>
</main>

<%- include("../partials/footer") %>